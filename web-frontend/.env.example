# Blacktip Web Frontend - Production Environment Configuration
# 
# Copy this file to .env in the web-frontend directory
# Set appropriate values for your production environment
#
# IMPORTANT: This file contains sensitive information. 
# Never commit it to version control!

# Flask Configuration
# Generate a secure secret key: python3 -c 'import os; print(os.urandom(24).hex())'
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# Database
BLACKTIP_DB=/var/lib/blacktip/blacktip.db

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://app.niceshark.com

# Server Configuration
PORT=5000
DEBUG=false

# Gunicorn Configuration
GUNICORN_BIND=127.0.0.1:5000
GUNICORN_WORKERS=4
GUNICORN_ACCESS_LOG=/var/log/blacktip/gunicorn-access.log
GUNICORN_ERROR_LOG=/var/log/blacktip/gunicorn-error.log
GUNICORN_LOG_LEVEL=info

# Optional: Rate Limiting (if using Flask-Limiter)
# RATELIMIT_ENABLED=true
# RATELIMIT_STORAGE_URL=memory://
# RATELIMIT_DEFAULT=100 per hour
